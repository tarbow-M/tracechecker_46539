<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <!-- ロゴやタイトルをここにも配置できます -->
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      TraceChecker ログイン
    </h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow-xl sm:rounded-xl sm:px-10">
      
      <!-- エラーメッセージ表示エリア -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        
        <!-- メールアドレス -->
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="mt-1">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "appearance-none block w-full px-3 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>

        <!-- パスワード -->
        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="mt-1">
            <%= f.password_field :password, autocomplete: "current-password", required: true, class: "appearance-none block w-full px-3 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>

        <!-- ログイン状態を記憶する -->
        <div class="flex items-center justify-between">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= f.label :remember_me, "ログイン状態を記憶する", class: "ml-2 block text-sm text-gray-900" %>
            </div>
          <% end %>

          <!-- パスワード忘れ -->
          <div class="text-sm">
            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "パスワードをお忘れですか?", new_password_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
            <% end %>
          </div>
        </div>

        <!-- ログインボタン -->
        <div>
          <%= f.submit "ログイン", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-base font-semibold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">
              または
            </span>
          </div>
        </div>

        <!-- 新規登録 -->
        <div class="mt-6 text-center">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "新しいアカウントを登録する", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %><br />
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>


<%#= render "devise/shared/links" %>
