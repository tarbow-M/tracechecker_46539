<!-- 新規作成フォーム -->
<div class="max-w-3xl mx-auto p-4 sm:p-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">
    新規業務フォルダ作成
  </h1>

  <!-- bg-white でカード状で表示 -->
  <div class="bg-white shadow-xl rounded-lg overflow-hidden">
    <div class="p-6 sm:p-8">
      
      <%= form_with(model: @parent_project, class: "space-y-6") do |form| %>
        
        <!-- バリデーションエラー（保存失敗時）のメッセージをここに表示します -->
        <%= render "layouts/error_messages", resource: @parent_project %>

        <!-- プロジェクト名 入力欄 -->
        <div>
          <%= form.label :name, '業務名', class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :name, 
                class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6",
                placeholder: "例: T社 2025年度監査" 
            %>
          </div>
        </div>

        <!-- フォームフッター（ボタン類） -->
        <div class="flex items-center justify-end gap-x-4 border-t border-gray-200 pt-6">
          <!-- キャンセルボタン (トップページに戻る) -->
          <%= link_to 'キャンセル', 
              root_path, 
              class: "text-sm font-semibold leading-6 text-gray-900" 
          %>
          
          <!-- 作成ボタン -->
          <%= form.submit '作成する', 
              class: "rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-sm transition-colors hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer" 
          %>
        </div>
      <% end %>
    </div>
  </div>
</div>