<!-- ヘッダー (ナビゲーションバー) -->
<header class="bg-white shadow-md sticky top-0 z-40">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      
      <!-- 左側: ロゴとメインリンク -->
      <div class="flex items-center space-x-8">
        <!-- ロゴ -->
        <%= link_to root_path, class: "flex-shrink-0 flex items-center" do %>
          <!-- (将来的にはここにロゴ画像) -->
          <span class="text-2xl font-bold text-gray-800">TraceChecker</span>
        <% end %>

        <!-- メインナビゲーション -->
        <div class="hidden md:flex md:space-x-6">
          <%= link_to "業務一覧", root_path, class: "px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700" %>
          
          <%= link_to "作業ログ", logs_path, class: "px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700" %>
          
          <!-- (将来のリンク: テンプレート管理など) -->
        </div>
      </div>

      <!-- 右側: ユーザー情報とログアウト -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <!-- ユーザー名 -->
          <span class="text-sm text-gray-600 hidden sm:block">
            <strong class="font-medium"><%= current_user.name || current_user.email %></strong>
          </span>

          <!-- ログアウトボタン -->
          <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg text-sm shadow-sm" %>
        <% else %>
          <!-- (未ログイン時のリンク) -->
          <%= link_to "ログイン", new_user_session_path, class: "text-sm font-medium text-gray-600 hover:text-gray-900" %>
          <%= link_to "新規登録", new_user_registration_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg text-sm shadow-sm" %>
        <% end %>
      </div>

    </div>
  </nav>
</header>

