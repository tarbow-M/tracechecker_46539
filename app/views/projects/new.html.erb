<!-- 
  /app/views/projects/new.html.erb
  @parent_project と @project を使ってフォームを表示します
-->
<div class="max-w-2xl mx-auto p-4 sm:p-8">
  <div class="bg-white shadow-xl rounded-lg overflow-hidden">
    <div class="p-6 sm:p-8">
      
      <!-- ヘッダー -->
      <h1 class="text-2xl font-bold text-gray-800 mb-2">
        新規照合単位（子プロジェクト）作成
      </h1>
      <p class="text-sm text-gray-500 mb-6">
        親プロジェクト: 
        <span class="font-medium text-blue-600"><%= @parent_project.name %></span>
      </p>
      
      <!-- フォームの送信先は[ @parent_project, @project ] と配列で渡すことで、RailsがネストされたURL (/parent_projects/:id/projects) を自動生成 -->
      <%= form_with(model: [ @parent_project, @project ], class: "space-y-6") do |form| %>
        
        <!-- エラー表示 -->
        <% if @project.errors.any? %>
          <div class="mb-4 rounded-md border border-red-200 bg-red-50 p-4">
            <h3 class="text-sm font-medium text-red-800">エラーが発生しました:</h3>
            <ul class="mt-2 list-disc list-inside text-sm text-red-700">
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- フォーム入力欄 -->
        <div>
          <%= form.label :name, '照合単位名', class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :name, class: "block w-full rounded-md border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6", placeholder: "例: Q1報告書 vs Q2報告書" %>
          </div>
        </div>

        <!-- ボタン -->
        <div class="flex items-center justify-end gap-x-4 pt-4 border-t border-gray-200">
          <%= link_to 'キャンセル', 
                parent_project_path(@parent_project), 
                class: "rounded-lg bg-gray-100 px-4 py-2 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-200" 
          %>
          <%= form.submit '作成する', class: "cursor-pointer rounded-lg bg-green-600 px-4 py-2 text-sm font-medium text-white shadow-sm transition-colors hover:bg-green-700" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
